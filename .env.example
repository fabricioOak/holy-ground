# .env.example

#-------------------------------------
# Application Configuration
#-------------------------------------
# Environment can be 'development', 'production', or 'test'
NODE_ENV=development

# The port the application will run on inside the Docker container
PORT=3333


#-------------------------------------
# Security - JWT (JSON Web Token)
#-------------------------------------
# IMPORTANT: Use a long, random, and secret string for production.
# You can generate a secure key by running this command in your terminal:
# openssl rand -hex 32
JWT_SECRET=your_super_secret_jwt_key_here_change_me


#-------------------------------------
# Database - PostgreSQL
#-------------------------------------
# These variables are used by the docker-compose.yml to initialize the PostgreSQL service.
POSTGRES_USER=docker
POSTGRES_PASSWORD=docker
POSTGRES_DB=holyground

# This is the full connection string used by the Node.js application (Drizzle ORM) to connect to the database.
# IMPORTANT: Notice that the host is 'db', which is the name of the database service in docker-compose.yml, NOT 'localhost'.
DATABASE_URL="postgresql://docker:docker@db:5432/holyground?schema=public"
